{
   "compilerOptions": {
       "outDir": "./dist",
       "target": "esnext",
       "module": "nodenext",
       "rewriteRelativeImportExtensions": true,
       "erasableSyntaxOnly": true,
       "verbatimModuleSyntax": true,
       "skipLibCheck": true,
       "forceConsistentCasingInFileNames": true,
       "resolveJsonModule": true,
       "isolatedModules": true,
       "strict": true,
       "noUncheckedIndexedAccess": true,
       "declaration": true
   },
   "files": ["src/index.ts"]
}
